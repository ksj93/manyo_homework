<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status,[["未着手","未着手"],["着手","着手"],["完了","完了"]] %>
  </div>

  <div class="field">
    <%= form.label :deadline %>
    <%= form.date_field :deadline ,value: Time.now.strftime("%Y-%m-%d") %>
  </div>

  <div class="field">
    <%= form.label :priority %>
    <%= form.select :priority,[["普通","普通"],["高い","高い"],["低い","低い"]] %>
  </div>

  <div class="field">
  <p><%= form.label :label %><p>
    <a id="checkbox">[<%= form.collection_check_boxes(:label_ids, Label.all, :id, :tag) %>]</a>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
